<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:context=".ThirdLab.FirstBlankFragment">

        <EditText
            android:id="@+id/et_number1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+" />

        <EditText
            android:id="@+id/et_number2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:importantForAutofill="no"
            tools:ignore="LabelFor" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_calc"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onClickCalculate"
        android:text="@string/Calculate" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="220dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickOpen2Lab"
        android:text="@string/LR2" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickOpen3Lab"
        android:text="@string/LR3" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickOpen5Lab"
        android:text="@string/LR5" />

</LinearLayout>